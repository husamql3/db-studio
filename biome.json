{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"lineWidth": 90,
		"lineEnding": "lf",
		"attributePosition": "multiline"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noStaticElementInteractions": "off",
				"useSemanticElements": "off",
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noChildrenProp": "off"
			}
		}
	},
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"includes": [
			"packages/**/src/**",
			"!packages/**/src/index.css",
			"packages/**/server/src/**",
			"www/src/**",
			"!www/src/styles.css",
			"!www/src/routeTree.gen.ts",
			"!www/public/**",
			"README.md"
		],
		"ignoreUnknown": true
	}
}