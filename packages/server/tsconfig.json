{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["node", "vitest/globals"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",	
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"shared/*": ["../shared/src/*"]
		}
	},
	"exclude": ["node_modules"]
}
